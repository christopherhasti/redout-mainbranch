{
  "manifest_version": 3,
  "name": "Redout",
  "version": "1.0",
  "description": "Detects flashing content and blocks it with customizable settings",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "browser-polyfill.js",
        "tracking-min.js",
        "settings.js",
        "tracker.js",
        "content.js"
      ],
      "css": [
        "overlay.css"
      ],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "redout@example.com"
    }
  }
}